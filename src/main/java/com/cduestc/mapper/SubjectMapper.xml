<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cduestc.mapper.SubjectMapper">
    <resultMap id="SubjectWithStudentsResultMap" type="com.cduestc.pojo.Subject">
        <id property="subid" column="subid"/>
        <result property="name" column="name"/>
        <result property="number" column="number"/>
        <collection property="students" ofType="com.cduestc.pojo.Student">
            <id property="sid" column="sid"/>
            <result property="name" column="stu_name"/>
            <result property="sex" column="sex"/>
            <result property="age" column="age"/>
            <result property="class_id" column="class_id"/>
        </collection>
    </resultMap>
    <select id="selectSubjectWithStudents" parameterType="int" resultMap="SubjectWithStudentsResultMap">
        SELECT
        sub.subid,
        sub.name,
        sub.number,
        s.sid,
        s.name AS stu_name,
        s.sex,
        s.age,
        s.class_id
        FROM subject sub
        LEFT JOIN student_subject ss ON sub.subid = ss.subid
        LEFT JOIN student s ON ss.sid = s.sid
        WHERE sub.subid = #{subid}
    </select>

</mapper>